void setup() {
  Serial.begin(9600);

  while (!Serial)
    ;

  WiFi.mode(WIFI_STA);
  delay(500);

  Serial.print("Attempting to connect to WPA SSID: ");
  Serial.println(ssid);
  // attempt to connect to Wifi network
  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");

    // Connect to WPA/WPA2 network:
    WiFi.begin(ssid, pwd);

    delay(1000);
  }
  Serial.println("\nConnected!");
}

void loop() {
  WiFiClientSecure *client = new WiFiClientSecure;
  if (client) {

    client->setCACert(cert);

    HTTPClient https;
    Serial.println("[HTTPS] begin...\n");
    if (https.begin(*client, "https://katla.cloud/api/data")) {

      String contentType = "application/json; charset=utf-8";
      String postData = "{ \"secret\": \"" + String(secret) + "\"," +
                        "\"temp_in\":" + String(random(100) * 0.2) + "," +
                        "\"temp_out\":" + String(random(100) * 0.1) + "," +
                        "\"humidity\":" + String(random(100) * 0.4) + " }";

      https.addHeader("Content-Type", contentType);
      int statusCode = https.POST(postData);
      String response = https.getString();

      Serial.print("Status code: ");
      Serial.println(statusCode);
      Serial.print("Response: ");
      Serial.println(response);

      https.end();
    } else {
      Serial.println("[HTTPS] Connecting failed!");
    }
  }
  delay(1000);
}
